<section class="parallax contact">

</section>
<section data-type="contact">
    <div class="col-2">
        <h4>Address</h4>
        <ul>
            <li><span>95 King Street, Cambridge,</span></li>
            <li><span>Cambridgeshire CB1 1LD</span></li>
        </ul>
        {{#if places.result.opening_hours}}
            <h4>Opening Hours</h4>
            <ul>
                {{#each places.result.opening_hours.weekday_text}}
                    <li><span>{{this}}</span></li>
                {{/each}}
            </ul>
        {{/if}}
        <h4>Contact</h4>
        <ul>
            <li>Phone:<span><a href="tel:01223464439">+44 (0) 1223 464439</a></span></li>
            <li>Email:<span><a href="mailto:info@adamsonberekoff.co.uk">info@adamsonberekoff.co.uk</a></span></li>
        </ul>
    </div><div class="col-2 light">
        {{#if email}}
            <h2>Thanks!</h2>
            <p>We will be in touch as soon as possible.</p>
        {{else}}
            <h2>Get in touch</h2>
            <form action="/contact" method="post">
                <label for="name">Your name (required)
                    <input type="text" id="name" name="name" required="required">
                </label>
                <label for="email">Email address (required)
                    <input type="email" id="email" name="email" required="required">
                </label>
                <label for="telephone">Phone number
                    <input type="tel" id="telephone" name="telephone">
                </label>
                <label for="message">Message
                    <textarea id="message" name="message"></textarea>
                </label>
                <input type="submit" class="btn" value="submit">
            </form>
        {{/if}}
    </div>
</section>
<div id="map"></div>