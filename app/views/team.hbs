                {{structuredText this 'bio' ../ctx}}
            </div>
            {{/if}}
        </div>
        {{/group}}
        <hr/>
        <h3 class="wow fadeInUp">Senior Management</h3>
        {{#group pageContent 'teampage.senior-management'}}
        <div class="team-member">
            <div class="avatar" style="background-image: url('{{image this 'image'}}')">
            </div>
            <h4>{{text this 'name'}}</h4>
            {{#if data.title}}
            <h4>{{text this 'title'}}</h4>
            {{/if}}
            {{#if data.bio}}
            <div class="link toggle-text">
                Read More +
            </div>
            <div class="text">
                {{structuredText this 'bio' ../ctx}}
            </div>
            {{/if}}
        </div>
        {{/group}}
