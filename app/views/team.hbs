<main class="team">
    <div class="container">
        <div class="hero team-bg margin" style="background-image: url('{{image pageContent 'teampage.hero'}}')">
            <div class="inner">
                <h2 class="indigo">Team</h2>
            </div>
        </div>
        {{structuredText pageContent 'teampage.body' ctx}}
        <h3 class="wow fadeInUp">Board</h3>
        {{#group pageContent 'teampage.board'}}
          <div class="team-member">
              <div class="avatar" style="background-image: url('{{image this 'image'}}')">
              </div>
              <h4>{{text this 'name'}}</h4>
              {{#if data.title}}
              <h4>{{text this 'title'}}</h4>
              {{/if}}
              {{#if data.bio}}
              <div class="link toggle-text">
                  Read More +
              </div>
              <div class="text">
                  {{structuredText this 'bio' ../ctx}}
              </div>
              {{/if}}
          </div>
        {{/group}}
        <hr/>
        <h3 class="wow fadeInUp">Advisers</h3>
        {{#group pageContent 'teampage.board-advisors'}}
        <div class="team-member">
            <div class="avatar" style="background-image: url('{{image this 'image'}}')">
            </div>
            <h4>{{text this 'name'}}</h4>
            {{#if data.title}}
