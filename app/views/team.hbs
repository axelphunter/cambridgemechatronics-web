                  {{structuredText bio}}
              </div>
              {{/if}}
          </div>
        {{/each}}
        <hr/>
        <h3 class="wow fadeInUp">Senior Management</h3>
        {{#each pageContent.data.[teampage.senior-management].value}}
          <div class="team-member">
              <div class="avatar" style="background-image: url('{{image.value.main.url}}')">
              </div>
              <h4>{{name.value}}</h4>
              <h4>{{title.value}}</h4>
              {{#if bio}}
              <div class="link toggle-text">
                  Read More +
              </div>
              <div class="text">
                  {{structuredText bio}}
              </div>
              {{/if}}
          </div>
        {{/each}}
